<FichaTecnica@Screen>:
    name: "fichaTecnica"

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: menu_top_app_bar

            title: "Ficha Técnica"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDScreen:
            MDScrollView:
                do_scroll_x: False
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .95

                MDBoxLayout:
                    adaptive_height: True
                    padding: [0, 50]
                    orientation: "vertical"
                    spacing: "80dp"

                    MDLabel:
                        text: "Peso Transformador"

                    MyMDBoxLayout:
                        MyMDTextField:
                            id: peso_ferro

                            hint_text: "Peso Ferro [Kg]"
                            readonly: True
                            focus: False

                        MyMDTextField:
                            id: peso_cobre

                            hint_text: "Peso Cobre [Kg]"
                            readonly: True
                            focus: False

                    MyMDBoxLayout:
                        size_hint_x: .5

                        MyMDTextField:
                            id: peso_total

                            hint_text: "Peso Total [Kg]"
                            readonly: True
                            focus: False

                    MDLabel:
                        text: "Perdas Transformador"

                    MyMDBoxLayout:
                        MyMDTextField:
                            id: perda_ferro

                            hint_text: "Perda Ferro [W]"
                            readonly: True
                            focus: False

                        MyMDTextField:
                            id: perda_cobre

                            hint_text: "Perda Cobre [W]"
                            readonly: True
                            focus: False

                    MDLabel:
                        text: "Rendimento"

                    MyMDBoxLayout:
                        size_hint_x: .5

                        MyMDTextField:
                            id: rendimento

                            hint_text: "Rendimento [%]"
                            readonly: True
                            focus: False

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "Transformadores"
                title_color: "#4a4939"
                text: "Projeto UPE-POLI 2023.2"
                spacing: "4dp"
                padding: "12dp", 0, 0, "56dp"

            MDNavigationDrawerLabel:
                text: "Dados Entrada"

            DrawerClickableItem:
                nav_drawer: nav_drawer
                icon: "home"
                text: "Tela Inicial"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "telaInicial"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Desenvolvimento"

            DrawerClickableItem:
                nav_drawer: nav_drawer
                icon: "note-edit"
                text: "Dimensionamento"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "dimensionamento"

            DrawerClickableItem:
                icon: "sine-wave"
                text: "Corrente Magnetização"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "correnteMagnetizacao"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Detalhamento"

            DrawerClickableItem:
                icon: "file-document"
                text: "Ficha Técnica"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "fichaTecnica"

            DrawerClickableItem:
                icon: "account-group"
                text: "Desenvolvedores"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "desenvolvedores"
