<Dimensionamento@Screen>:
    name: "dimensionamento"

    MDScreen:
        MDBoxLayout:
            orientation: "vertical"

            MyMDBoxLayout:

                MDScrollView:

                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: "90dp"
                        padding: "10dp"
                        adaptive_height: True
                        size_hint_x: .8
                        pos_hint: {"center_x": .5, "center_y": .5}

                        Widget:
                            size_hint_y: None
                            height: dp(45)

                        MDLabel:
                            text: "Número de Espiras"

                        MyMDBoxLayout:

                            MyMDTextField:
                                id: espiras_primario
                                hint_text: "Primário"
                                readonly: True

                            MyMDTextField:
                                id: espiras_secundario
                                hint_text: "Secundária"
                                readonly: True

                        MDLabel:
                            text: "Bitola do Cabo"

                        MyMDBoxLayout:

                            MyMDTextField:
                                id: cabo_AWG_primario
                                hint_text: "Primário"
                                readonly: True

                            MyMDTextField:
                                id: cabo_AWG_secundario
                                hint_text: "Secundário"
                                readonly: True


                        MDLabel:
                            text: "Lâmina"

                        MyMDBoxLayout:

                            MyMDTextField:
                                id: lamina
                                hint_text: "Tipo de Lâmina"
                                readonly: True

                            MyMDTextField:
                                id: quantidade_laminas
                                hint_text: "Quantidade"
                                readonly: True

                        MDLabel:
                            text: "Dimensões do Transformador"

                        MDBoxLayout:
                            orientation: 'horizontal'

                            MDBoxLayout:
#                                size: {"40dp", "50dp"}
                                orientation: 'horizontal'
                                spacing: "20dp"

                                FitImage:
                                    size_hint_y: None
                                    size: {"50dp", "122dp"}
                                    orientation: 'horizontal'
                                    source: '../integracao/images/transformador.png'

                                FitImage:
                                    size_hint_y: None
                                    size: {"85dp", "120dp"}
                                    orientation: 'horizontal'
                                    source: '../integracao/images/lamina_padronizada.png'

                            MyMDBoxLayout:
                                size_hint_y: .9
                                MyMDTextField:
                                    id: dimensao_a
                                    hint_text: "Dimensão a [cm]"
                                    readonly: True

                                MyMDTextField:
                                    id: dimensao_b
                                    hint_text: "Dimensão b [cm]"
                                    readonly: True

                        MyMDBoxLayout:
                            size_hint_x: .5
                            pos_hint: {"center_x": .5, "center_y": .5}

                            MyMDTextField:
                                id: peso_total
                                hint_text: "Peso [Kg]"
                                readonly: True

    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDTopAppBar:
                    id: menu_top_app_bar

                    title: "Dimensionamento"
                    pos_hint: {"top": 1}
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Transformadores"
                    title_color: "#4a4939"
                    text: "Projeto UPE-POLI 2023.2"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Dados Entrada"

                DrawerClickableItem:
                    nav_drawer: nav_drawer
                    icon: "home"
                    text: "Tela Inicial"

                    on_press:
                        nav_drawer.set_state("close")
                        app.root.current = "telaInicial"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Desenvolvimento"

                DrawerClickableItem:
                    nav_drawer: nav_drawer
                    icon: "note-edit"
                    text: "Dimensionamento"

                    on_press:
                        nav_drawer.set_state("close")
                        app.root.current = "dimensionamento"

                DrawerClickableItem:
                    icon: "sine-wave"
                    text: "Corrente Magnetização"

                    on_press:
                        nav_drawer.set_state("close")
                        app.root.current = "correnteMagnetizacao"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Detalhamento"

                DrawerClickableItem:
                    icon: "file-document"
                    text: "Ficha Técnica"

                    on_press:
                        nav_drawer.set_state("close")
                        app.root.current = "fichaTecnica"

                DrawerClickableItem:
                    icon: "account-group"
                    text: "Desenvolvedores"

                    on_press:
                        nav_drawer.set_state("close")
                        app.root.current = "desenvolvedores"
