<Dimensionamento@Screen>:
    name: "dimensionamento"

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: menu_top_app_bar

            title: "Dimensionamento"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

        MDScreen:
            MDScrollView:
                do_scroll_x: False
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .95

                MDBoxLayout:
                    adaptive_height: True
                    padding: 20
                    orientation: "vertical"
                    spacing: "40dp"

                    VerticalMDBoxLayout:
                        MDLabel:
                            text: "Número de Espiras"

                        MyMDBoxLayout:
                            MyMDTextField:
                                id: espiras_primario
                                hint_text: "Primário"
                                readonly: True

                            MyMDTextField:
                                id: espiras_secundario
                                hint_text: "Secundária"
                                readonly: True

                    VerticalMDBoxLayout:
                        MDLabel:
                            text: "Bitola do Cabo"

                        MyMDBoxLayout:
                            MyMDTextField:
                                id: cabo_AWG_primario
                                hint_text: "Primário"
                                readonly: True

                            MyMDTextField:
                                id: cabo_AWG_secundario
                                hint_text: "Secundário"
                                readonly: True

                    VerticalMDBoxLayout:
                        MDLabel:
                            text: "Lâmina"

                        MyMDBoxLayout:
                            MyMDTextField:
                                id: lamina
                                hint_text: "Tipo de Lâmina"
                                readonly: True

                            MyMDTextField:
                                id: quantidade_laminas
                                hint_text: "Quantidade"
                                readonly: True

                    VerticalMDBoxLayout:
                        spacing: "20dp"

                        MDLabel:
                            text: "Dimensões do Transformador"

                        MyMDBoxLayout:
                            orientation: 'horizontal'
                            adaptive_height: True
                            adaptive_width: True
                            pos_hint: {"center_x": .5, "center_y": .5}


                            FitImage:
                                id: imagem_transformador

                                radius: 24
                                size_hint: None, None
                                pos_hint: {"center_x": .5, "center_y": .5}

                            FitImage:
                                id: imagem_lamina

                                radius: 24
                                size_hint: None, None
                                pos_hint: {"center_x": .5, "center_y": .5}

                        MyMDBoxLayout:
                            adaptive_height: True

                            MyMDTextField:
                                id: dimensao_a
                                hint_text: "Dimensão a [cm]"
                                readonly: True

                            MyMDTextField:
                                id: dimensao_b
                                hint_text: "Dimensão b [cm]"
                                readonly: True

                        MyMDBoxLayout:
                            adaptive_height: True
                            size_hint_x: .5

                            MyMDTextField:
                                id: peso_total
                                hint_text: "Peso [Kg]"
                                readonly: True

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)

        MDNavigationDrawerMenu:

            MDNavigationDrawerHeader:
                title: "Transformadores"
                title_color: "#4a4939"
                text: "Projeto UPE-POLI 2023.2"
                spacing: "4dp"
                padding: "12dp", 0, 0, "56dp"

            MDNavigationDrawerLabel:
                text: "Dados Entrada"

            DrawerClickableItem:
                nav_drawer: nav_drawer
                icon: "home"
                text: "Tela Inicial"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "telaInicial"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Desenvolvimento"

            DrawerClickableItem:
                nav_drawer: nav_drawer
                icon: "note-edit"
                text: "Dimensionamento"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "dimensionamento"

            DrawerClickableItem:
                icon: "sine-wave"
                text: "Corrente Magnetização"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "correnteMagnetizacao"

            MDNavigationDrawerDivider:

            MDNavigationDrawerLabel:
                text: "Detalhamento"

            DrawerClickableItem:
                icon: "file-document"
                text: "Ficha Técnica"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "fichaTecnica"

            DrawerClickableItem:
                icon: "account-group"
                text: "Desenvolvedores"

                on_press:
                    nav_drawer.set_state("close")
                    app.root.current = "desenvolvedores"
